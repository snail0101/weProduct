/* pages/shopping/shopping.wxss */
@import "/utils/style/flexstyle.wxss";
/* @import "/utils/xmls/noneDataStyle/noneDataStyle.wxss"; */

page {
  background: #f5f5f5;
  height: 100%;
}

.pros {
  overflow: auto;
  height: 90%;
}

.pro {
  padding: 20rpx 30rpx;
}

.checkImg {
  width: 32rpx;
}

.proRight {
  width: 440rpx;
  height: 166rpx;
}

.proImg {
  width: 180rpx;
  height: 180rpx;
}




/* 数量选择器 */

.muns {
  display: flex;
}

.minus {
  border: 1rpx solid #999;
  border-right: none;
  width: 56rpx;
  height: 56rpx;
  border-radius: 6rpx 0 0 6rpx;
}

.num {
  border: 1rpx solid #999;
  width: 80rpx;
  height: 56rpx;
  min-height: 50rpx;
  line-height: 1;
  text-align: center;
  box-sizing: border-box;
}

.add {
  border: 1rpx solid #999;
  border-left: none;
  width: 56rpx;
  height: 56rpx;
  border-radius: 0 6rpx 6rpx 0;
}

/* 底部按钮区 */

.final {
  height: 88rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}

.buttons button {
  width: 180rpx;
  height: 88rpx;
  color: #fff;
  border-radius: 0;
}

button::after {
  border: 0;
}
