/* pages/peopleData/order/order.wxss */

@import "/utils/style/flexstyle.wxss";

page {
  height: 100%;
}

scroll-view {
  width: 100%;
  height: 100%;
}

.titleTop {
  padding: 30rpx 20rpx;
  border-bottom: 4rpx solid transparent;
}

.titlecolor {
  color: #FF8003;
  border-bottom: 4rpx solid #FF8003;
}

.orders {
  padding: 30rpx;
}

.pros {
  padding: 20rpx 0;
}

.pros image {
  width: 180rpx;
  height: 180rpx;
}

swiper-item {
  overflow: auto;
}

.prosRight {
  height: 180rpx;
  width: 480rpx;
}

.buts view {
  /* padding: 10rpx 20rpx; */
  line-height: 1;
  border: 1rpx solid #666;
  border-radius: 27rpx;
  margin-left: 20rpx;
  height: 54rpx;
  padding-left: 20rpx;
  padding-right: 20rpx
}

/* 支付方式弹出框 */

.payclass {
  width: 100%;
  height: 660rpx;
  background: #fff;
  border-top: 1rpx solid #ededed;
  position: fixed;
  bottom: 0;
  z-index: 2000;
}

.payclass_title {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
}

.payclass_item {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
  padding: 0 30rpx;
}

.payclass_btn {
  width: 660rpx;
  margin-top: 60rpx;
  background: #f23030;
  color: #fff;
}

.cancel {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}

.c_i {
  color: #FF8003;
}
